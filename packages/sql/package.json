{
  "name": "@dev/sql",
  "version": "1.0.0",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib",
  "files": [
    "lib/"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "coverage": "type-coverage && tsc --noEmit",
    "migrate:create": "node-pg-migrate create -j ts",
    "migrate:up": "ts-node node_modules/.bin/node-pg-migrate up -j ts --envPath ../../.env",
    "migrate:down": "ts-node node_modules/.bin/node-pg-migrate down -j ts --envPath ../../.env",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.7",
    "@types/pg": "^8.6.6",
    "node-pg-migrate": "^6.2.2"
  }
}
